        <dd>
            @Html.DisplayFor(model => model.MasterProductName)
        </dd>

        <dt>
            Product Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            Packing Size
